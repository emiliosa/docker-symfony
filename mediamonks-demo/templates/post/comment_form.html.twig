{{ form_start(form, {method: 'POST', action: path('post_comment_new', {'slug': post.slug})}) }}
<fieldset>
    <legend>
        <i class="fa fa-comment" aria-hidden="true"></i>
        Add comment
    </legend>

    {{ form_errors(form) }}

    <div class="form-group {% if not form.content.vars.valid %}has-error{% endif %}">
        {{ form_errors(form.content) }}
        {{ form_widget(form.content, {attr: {rows: 10}}) }}
    </div>

    <div class="form-group">
        <button class="btn btn-primary pull-right" type="submit">
            <i class="fa fa-paper-plane" aria-hidden="true"></i>Insert it
        </button>
    </div>
</fieldset>
{{ form_end(form) }}
